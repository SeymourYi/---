/* login.wxss */
.container {
    margin-top: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    font-size: 15px;
  }
  
  .input-group {
    margin-bottom: 20px;
  }
  
  .input {
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
  }
  
  .checkbox {
    margin-top: 20px;
    display: inline-block;
    margin-left: 10px;
    font-size: 15px;
  }
  
  .login-btn {
    width: 100%;
    background-color: #e25165;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10px 2px;
    cursor: pointer;
  }
  